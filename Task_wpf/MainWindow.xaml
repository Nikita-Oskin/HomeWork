<Window x:Class="pcshop_wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        WindowStartupLocation="CenterScreen"
        xmlns:local="clr-namespace:pcshop_wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="image_2022-04-18_04-08-09.png"/>
        </Grid.Background>
        <Label Content="PC__SHOP" Margin="501,275,0,0" Height="84" Width="225" Foreground="White" FontSize="48" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="{DynamicResource {x:Static SystemFonts.MessageFontFamilyKey}}" FontStyle="{DynamicResource {x:Static SystemFonts.CaptionFontStyleKey}}"/>
        <Button Content="Start" HorizontalAlignment="Left" Margin="1127,640,0,0" VerticalAlignment="Top" Width="135" Height="39" Click="Button_Click" Background="White">
            <Button.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Button.BorderBrush>
        </Button>
    </Grid>
</Window>
